 /**
 *  店铺信息弹窗
 */
@import "template/entInfoToast.wxss";
image{
  display: block;
}

.dish-float::after{
    content: " 起";
    font-size: 13px;
    color: #A3A3A3;
}
.dish-price::before{
    content: "￥";
    font-size: 12px;
}
.dish-price{
    color: #C81128;
    font-size: 16px;
}
.dish-unit{
    color:#969696;
    font-size:13px;
}
.inner-dish-num{
    flex:1;
    text-align:center;
    font-size: 14px;
    line-height: 15px;
}
.originalPri::before{
    content: "￥";
}
.originalPri{
    color:#969696;
    font-size:11px;
    text-decoration:line-through;
    margin-left: 5px;
}

/* 通用*/
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

/*切换显示模式*/
.swich-model{
    width: 66px;
    height: 24px;
}
.ent-info{
    position: absolute;
    background-color: #FFFFFF;
    top:-100px;
    width: 100%;
    height: 100px;
    font-size:22rpx;
}
.ent-info::before{
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  border-bottom: 1px solid #e6e6e6;
  transform: scaleY(0.5);
}
.ent-info > image{
    position: absolute;
    background-size: 100% auto;
    width: 100%;
    height: 100%;
    z-index: 1;
}
.ent{
   position: absolute;
   z-index: 2;
   height:100%;
   width: 100%;
}
.ent > view{
    height: 128rpx;
}
.ent > view:last-child{
    width: 100%;
    padding-right: 24rpx;
}
.ent-logo{
    margin-left: 24rpx;
    margin-right: 19rpx;
}
.ent-logo > image{
    width: 86rpx;
    height: 86rpx;
}
.ent-name >view{
   font-size: 46rpx;
   flex: 1;
   font-weight: 400;
}
.ent-time{
  margin-right: 24rpx;
}

.ent-address >view{
    flex: 1;
}
.ent-address >image{
    position: relative;
    width:28rpx;
    height:30rpx;
    padding-right: 8rpx;
  
}

.noDishImg-bg.clip{
  border-radius: 43rpx;
}