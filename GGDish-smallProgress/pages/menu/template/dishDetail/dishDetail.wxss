.dish-detail-container{
     position:fixed;
     width:100%;
     top: 0;
     left:0;
     right: 0;
     bottom: 110rpx;
     background:#FFFFFF;
     z-index:2;
}
.dish-detail-img-container{
    position: relative;
}
.dish-detail-back{
    position: absolute;
    left: 24rpx; 
    top: 24rpx;
    width: 70rpx;
    height: 70rpx;
}
.dish-detail-dish-info-container{
    background:#FFFFFF;
    position:relative;
  
    align-items:center;
    padding:30rpx 0 30rpx 0;
}
.dish-detail-dish-img{
    width:100%;
    height:750rpx;
}
.dish-detail-price-container{
    display:flex;
    margin-left:24rpx;
}
.dish-detail-dish-introduce-container{
    position: relative;
    padding-top: 33rpx;
    padding-left: 24rpx;
    padding-bottom: 33rpx;
}
.dish-detail-dish-introduce-container::before{
    content: " ";
    position: absolute;
    left: 24rpx;
    top: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #d8d8d8;
    color: #d8d8d8;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}
.dish-detail-dish-introduce{
    margin-top:20rpx;
}
.dish-detai-dish-name{
    font-size:32rpx;
    color:#1F1f1F;
    margin-left:24rpx;
}
.dish-detai-special-offer{
    color:#cf112d;
    font-size:22rpx;
    margin-left:24rpx;
}
.num-operation.btn{
    padding: 12rpx 40rpx;
}
.dish-detail-tip{
    margin-left:24rpx;
    
}
.num-operation{
    /*position:absolute;
    right:24rpx;*/
    display:flex;
    text-align:center;
}
.num-operation > image{
    width:50rpx;
    height:50rpx;
    background-size:100%;
}

.item-dish-name{
    font-size:40rpx;
    color:#1F1f1F;
}
.dDetail-item-price-lay{
    display:flex;
    line-height:28rpx;
    margin-top:16rpx
}


.item-dish-num{
    min-width:74rpx;
    line-height:50rpx;
}
.select-side-dish{
    display:flex;
    text-align:center;
    border:1px #939393 solid;
    padding:4rpx 10rpx;
    border-radius:18rpx;
    color:#cf112d;
    font-size:20rpx;
}
.select-side-dish:active{
    border-color:#Cf112d;
}
.item-ren{
    font-size:22rpx;color:#CC1120;
}
.item-price-num{
    font-size:34rpx;color:#CC1120;
}
.item-unit{
    font-size:24rpx;color:#1F1f1F;
}
.before-price{
 margin-left:8rpx;
 color:#8D8D8D;
 font-size:22rpx;
 text-decoration:line-through;
}
