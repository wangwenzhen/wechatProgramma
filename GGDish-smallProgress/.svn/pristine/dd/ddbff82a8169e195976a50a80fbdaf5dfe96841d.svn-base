    //获取桌位信息
    getDeskInfo: function (resourceId){
      var that = this;
      wx.request({
        url: constants.IP + constants.URL_GetDeskInfoById,
        data: {
          entId: that.data.orderInfo.entInfo.entId,
          resourceId: resourceId,
        },
        success: function (res) {
          //获取 桌位类型  桌位号
          var deskType = '';
          var deskNo = '';
        
          if (res.data.returnCode === constants.RETURN_OK) {

            console.log('获取桌位信息__成功');
            console.log(res);
            if (that.data.orderInfo.entInfo.entId === res.data.entId) {

              if (res.data.deskType && res.data.deskNumber) {

                  if (res.data.deskType === "包间" || res.data.deskType === "1") {
                    that.userArrive("1", res.data.deskNumber);
                  } else if (res.data.deskType == "散台" || res.data.deskType ==="2") {
                    that.userArrive("2", res.data.deskNumber);
                  }

              } else if (!res.data.deskType && !res.data.deskNumber) {
                  that.userArrive("", "");
              }

            } else {
              console.log("二维码错误!");

            }

          } else {
            console.log('获取桌位信息失败');
          }

        },
        fail: function (res) {
          //获取桌位信息失败
          console.log('获取桌位信息失败');
        },
      })
    },
